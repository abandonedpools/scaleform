<root>
	<styles>
		<include src="file://{resources}/styles/base.css" />
    <include src="file://{resources}/styles/csgostyles.css" />
    <include src="file://{resources}/styles/hud/hudmoney.css" />
	</styles>

	<CSGOMoneyPanel class="money" hittest="false" force-no-composition-layer="true">
	    <Panel class="money-text-bg"/>
		<Panel id="MoneyBG" class="afxhidden"/>
	    <Panel class="money-text">
		
			<Image class="money-text-buy-icon" src="file://{images}/icons/ui/buyzone.png"/>
			            
			<Image id="SurvivalZoneMoneyExploreBonus" class="money-text-explorebonus-icon cl-hud-wash-color hidden" src="file://{images}/icons/ui/explorebonus.svg" texturewidth="48" textureheight="-1" />
			<Image id="SurvivalZoneMoneyBombWaveBonus" class="money-text-bombwavebonus-icon cl-hud-wash-color hidden" src="file://{images}/icons/ui/bombwavebonus.svg" texturewidth="48" textureheight="-1" />
			            
			<Label class="money-text-label cl-hud-wash-color" text="#Hud_Money"/>
			            
			<CSGOSurvivalZoneMoneyProgress id="SurvivalZoneMoneyProgress" class="hidden"/>
			            
			                                                                                                            
	                                                                                                                
	                                                                                                                             
	    </Panel>

	    <CSGOMoneyAnimLabel id="Money-Add"      class="money-anim" text="#Hud_Money_Signed"/>
	    <CSGOMoneyAnimLabel id="Money-AddFlash" class="money-anim" text="#Hud_Money_Signed"/>
	    <CSGOMoneyAnimLabel id="Money-Remove"   class="money-anim" text="#Hud_Money_Signed"/>
	</CSGOMoneyPanel>
</root>
