<root>
	<styles>
		<include src="file://{resources}/styles/csgostyles.css" />
		<include src="file://{resources}/styles/hud/hudhealtharmor.css" />
	</styles>

                                                      
                                                      
                                                              
                                                   
                                                                                              
                                                    
                                                                
       
	<CSGOHudHealthArmor class="hud-HA" hittest="false">

		                         
	<Panel class="hud-HA-bg1">
      <Panel id="HudHealthBG" class="hud-HA-bg-health"  />
      <Panel id="HudArmorBG" class="hud-HA-bg-armor"  />
    </Panel>
	
	<Panel id="HudHealthArmorBG" class="afxhidden" />

                                            
		<Panel class="hud-HA-main left-right-flow">
      
		                 
			<Panel class="hud-HA-health">
				<Panel class="hud-HA-icon-container">
					<Image class="hud-HA-icon hud-HA-icon--health cl-hud-wash-color" src="file://{images}/hud/healtharmor/hp.png" scaling="stretch-to-fit-preserve-aspect" />
				</Panel>
				<Panel class="hud-HA-health1">
					<Label class="hud-HA-health-label cl-hud-wash-color" text="{s:health}"/>
				</Panel>
				<ProgressBar id="HealthBar" class="hud-HA-bar hud-HA-bar--health" />
			</Panel>

			              
			<Panel class="hud-HA-armor">
				<Panel class="hud-HA-icon-container">
					<Image class="hud-HA-icon hud-HA-icon--heavy" src="file://{images}/hud/healtharmor/armor.png" scaling="stretch-to-fit-preserve-aspect" />
					<Image class="hud-HA-icon hud-HA-icon--armor cl-hud-wash-color" src="file://{images}/hud/healtharmor/armor.png" scaling="stretch-to-fit-preserve-aspect" />
					<Image class="hud-HA-icon hud-HA-icon--helmet cl-hud-wash-color" src="file://{images}/hud/healtharmor/helmet.png" scaling="stretch-to-fit-preserve-aspect" />
				</Panel>
				<Panel class="hud-HA-armor1">">
					<Label class="hud-HA-armor-label cl-hud-wash-color" text="{s:armor}"/>
				</Panel>
				<ProgressBar id="ArmorBar" class="hud-HA-bar hud-HA-bar--armor cl-hud-wash-color" />

			</Panel>
			<CSGOHudPassiveItems id="HudPassiveItems"/>
		</Panel>

	</CSGOHudHealthArmor>
</root>